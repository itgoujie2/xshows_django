# Production Environment Variables for EC2 t3.small (2GB RAM)
# Copy this to .env on your EC2 instance and customize values

# Django Settings
SECRET_KEY=your-secret-key-here-change-this
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-ec2-ip

# Database (MySQL on same instance or RDS)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=xshows
DB_USERNAME=xshows_user
DB_PASSWORD=your-strong-password-here

# Redis (on same instance)
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0
REDIS_HOST=redis://127.0.0.1:6379/1

# Memory Optimization for t3.small (2GB RAM)
# CRITICAL: These settings prevent memory exhaustion
CELERY_WORKER_CONCURRENCY=2
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_WORKER_MAX_TASKS_PER_CHILD=50
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=240

# Limit nudity checks per run (important for t3.small)
MAX_NUDITY_CHECKS_PER_RUN=20

# Site Configuration
SITE_URL=https://your-domain.com
SESSION_LIFETIME=360

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Email Configuration (for notifications)
# Option 1: Gmail
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_ENCRYPTION=tls

# Option 2: SendGrid (recommended for production)
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key
# MAIL_FROM_ADDRESS=noreply@your-domain.com
# MAIL_ENCRYPTION=tls

# Twitter API (optional - for Twitter bot feature)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# Logo Path
LOGO_PATH=images/logo/
